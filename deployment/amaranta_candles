server {
    listen 443 ssl; # managed by Certbot
    server_name candles.amaranta.house;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:6969;
    }


    ssl_certificate /etc/letsencrypt/live/candles.amaranta.house/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/candles.amaranta.house/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = candles.amaranta.house) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name candles.amaranta.house;
    return 404; # managed by Certbot


}
